<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ui_background_color"
              >
  <TextView
      android:id="@+id/profile_label_textview"
      android:layout_width="match_parent" 
      android:layout_height="wrap_content" 
      android:text="@string/profile_label"
      android:background="@color/ui_theme_color_a"
      android:textColor="@color/ui_static_text_color"
      android:textSize="@dimen/ui_label_text_dimension"
      android:layout_marginBottom="@dimen/ui_vertical_margin"
      />
  <Button
      android:id="@+id/profile_logout_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/profile_logout_button_text"
      android:onClick="onLogoutButtonClicked"
      android:background="@color/ui_theme_color_b"
      android:textColor="@color/ui_button_text_color"
      android:textSize="@dimen/ui_button_text_size"
      android:layout_marginBottom="@dimen/ui_vertical_margin"
      />
</LinearLayout>
